{
    "compilerOptions": {
        "jsx":"react",
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist/",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "removeComments": true,
        "noImplicitAny": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/"
    ]
}